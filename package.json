{
  "name": "quark",
  "version": "1.6.0",
  "description": "Fundamental project template",
  "author": {
    "name": "Alberto Basalo",
    "email": "albertobasalo@hotmail.com",
    "url": "https://twitter.com/albertobasalo"
  },
  "homepage": "https://github.com/AtomicBuilders/quark#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtomicBuilders/quark.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtomicBuilders/quark/issues"
  },
  "scripts": {
    "start": "node ./dist/main.js",
    "test": "jest --coverage",
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node ./src/main.ts",
    "test:dev": "jest --watch",
    "ts-node": "ts-node",
    "format": "prettier --write \"./**/*.{ts,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prerelease": "standard-version ",
    "release": "git push --follow-tags origin main",
    "update": "ncu -u"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "npm-check-updates": "^11.8.5",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0"
  },
  "dependencies": {
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "@ab/(.*)": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "verbose": true,
    "collectCoverage": false,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
