  "author": {
    "name": "Alberto Basalo",
    "email": "albertobasalo@hotmail.com",
    "url": "https://twitter.com/albertobasalo"
  },
  "homepage": "https://github.com/AtomicBuilders/quark#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtomicBuilders/quark.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtomicBuilders/quark/issues"
  },
  "scripts": {
    "start": "node ./dist/main.js",
    "prestart": "npm run build",
    "build": "tsc  -p tsconfig.json",
    "dev": "ts-node ./src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"./**/*.{ts,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prerelease": "standard-version ",
    "release": "git push --follow-tags origin master",
    "updates": "ncu -u"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "npm-check-updates": "^11.5.4",
    "prettier": "^2.2.1",
    "standard-version": "^9.2.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "typescript": "^4.2.4"
  }
}
